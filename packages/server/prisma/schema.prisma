model Progress {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  date         String
  weight       Int
  notes        String      @default("")
  measurements Measurement
  photos       String[]
}

type Measurement {
  leftArm    Float
  rightArm   Float
  back       Float
  chest      Float
  waist      Float
  hips       Float
  leftThigh  Float
  rightThigh Float
  leftCalve  Float
  rightCalve Float
}
